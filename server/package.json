{
  "name": "server",
  "version": "2.0.0",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/index.js",
	"configure-api": "node_modules/ng-openapi-gen/lib/index.js",
	"configure-swagger": "node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d config/swagger/swagger-def.json -o swagger-api-spec.json",
	"build-api": "npm run build && npm run configure-swagger",
	"build-configure-api": "npm run build-api && npm run configure-api",
    "build-and-start": "npm run build && npm run build-configure-api && npm run serve",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect dist/index.js",
    "test": "npm run build-ts && node node_modules/jasmine/bin/jasmine.js",
    "watch-test": "node_modules/nodemon/bin/nodemon.js -w dist ./node_modules/.bin/jasmine",
    "lint": "./node_modules/.bin/eslint \"**/*.ts\" --ignore-path \".eslintignore\"",
    "lint-fix": "./node_modules/.bin/eslint \"**/*.ts\" --ignore-path \".eslintignore\" --fix",
    "lint-errors": "./node_modules/.bin/eslint \"**/*.ts\" --quiet",
    "e2e": "ng e2e",
    "commit-prep": "npm run test && npm run lint"
  },
  "private": true,
  "dependencies": {
    "body-parser": "~1.19.0",
    "compression": "~1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "~2.8.5",
    "dotenv": "~8.2.0",
    "eslint": "~6.8.0",
    "events": "~3.1.0",
    "express": "~4.17.1",
    "express-async-handler": "~1.1.4",
    "express-validation": "~1.0.3",
    "formidable": "~1.2.1",
    "glob": "~7.1.6",
    "helmet": "~3.21.2",
    "http-errors": "~1.7.3",
    "lodash": "~4.17.15",
    "method-override": "~3.0.0",
    "mongoose": "~5.8.7",
    "morgan": "~1.9.1",
    "ng-openapi-gen": "~0.7.2",
    "nodemon": "~2.0.2",
    "path": "~0.12.7",
    "rxjs": "~6.5.4",
    "swagger-jsdoc": "~3.5.0",
    "swagger-ui-express": "~4.1.2"
  },
  "devDependencies": {
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.8",
    "@types/mongodb": "~3.3.14",
    "@types/mongoose": "~5.5.41",
    "@types/node": "~13.1.6",
    "@typescript-eslint/eslint-plugin": "~2.15.0",
    "@typescript-eslint/parser": "~2.15.0",
    "cli-color": "~2.0.0",
    "codelyzer": "~5.2.1",
    "jasmine": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.0",
    "karma-jasmine-html-reporter": "~1.5.0",
    "moment": "~2.24.0",
    "ts-node": "~8.6.0",
    "tslint": "~5.20.1",
    "typescript": "~3.7.4",
    "typescript-tslint-plugin": "~0.5.5"
  }
}
